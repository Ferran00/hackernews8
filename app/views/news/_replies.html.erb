                                     <% else quant=(quant/86400).round %>
                                        <span class="age"> <%= quant %> days ago </span>
                                     <% end %>
                                     

                            </span>
                        </div>
                        
                        <div class="comment">
                            <span class="comtext c00">
                                <%= reply1.text %>
