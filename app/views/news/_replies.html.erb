                                        <font size="1">
                                            <u>
                                                <%= link_to "reply", reply_path(@reply, :id => reply1.id) %>
                                            </u>
                                        </font>
                                    </p>
                                </div>
                            </span>
                        </div>
                    </td>
                </tr>
                
            </tbody>
        </table>
    </td>
</tr>

  <%= render partial: "replies", locals: {idParentComment2: reply1.id, depth: depth + 1} %>
    
<% end %>